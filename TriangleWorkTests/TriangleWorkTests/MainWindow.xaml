<Window x:Class="TriangleWorkTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangleWorkTests"
        mc:Ignorable="d"
        Title="Программа проверки треугольников" Height="450" Width="800" Background="SkyBlue">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="3">
            <TextBlock Name="itog" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Foreground="BlueViolet"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBox Name="firstBox"
                    Margin="30 15 50 50" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox Name="secondBox"
                    Margin="30 15 50 50" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="2">
                <TextBox Name="thirdBox"
                         Margin="30 15 50 50" TextAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Button Content="Проверить"
                FontSize="30"
                Margin="200 30 200 30" Click="Button_Click"/>
        </Grid>
        <Grid Grid.Row="0">
            <TextBlock Text="Введите длины сторон треугольников"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </Grid>
    </Grid>
</Window>
